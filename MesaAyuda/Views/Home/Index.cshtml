@using (Html.BeginForm())
{
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Solicitud de Soporte</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        Apellidos y Nombres<br>
						@Html.TextBoxFor(model => model.Nombre, new { Class="form-control", placeholder="Escriba su nombre completo", required = "required" })
                    </div>
                    <div class="form-group">
                        Correo Electronico<br>
						@Html.TextBoxFor(model => model.Correo, new { Class = "form-control", placeholder = "ejemplo@ejercito.mil.co", type = "email", required = "required" })
                    </div>
                    <div class="form-group">
                        Selecciones su Grado<br />
                        @Html.DropDownListFor(model => model.GradoId, new SelectList(ViewBag.Grados, "Id", "Grado", null), "Seleccione...", new { Class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        Seleccione la Categoria de su Incidencia<br />
                        @Html.DropDownList("categoria", new SelectList(ViewBag.Categorias, "Id", "Categoria", null), "Seleccione...", new { Class = "form-control", required = "required" })
                    </div>
                    <div id="lista-incidencias" class="form-group">
                    </div>
                    <div class="form-group">
                        Comentario<br>
						@Html.TextAreaFor(model => model.Comentario, new { Class = "form-control", placeholder = "Realice una descripcion de la incidencia", required = "required", style = "resize:none" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <input type="submit" class="btn btn-primary" value="Crear Ticket" />
                </div>
            </div>
        </div>
    </div>
}

<script>
    $("#categoria").change(function () {
        $.ajax({
			url: '/MesaAyudaCOING/Home/CargarIncidencias/' + $(this).val(),
            success: function (response) {
                $("#lista-incidencias").html(response);
            }
        });
    });
</script>e